@model IEnumerable<Hospital.Data.Entities.Lab>

@{
    ViewData["Title"] = "Índice de Laboratorios";
}

<h1>Índice de Laboratorios</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear Nuevo</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.LabName)</th>
            <th>@Html.DisplayNameFor(model => model.Address)</th>
            <th>@Html.DisplayNameFor(model => model.LabPhone)</th>
            <th>@Html.DisplayNameFor(model => model.DateHourLab)</th>
            <th>Archivo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.LabName)</td>
                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                <td>@Html.DisplayFor(modelItem => item.LabPhone)</td>
                <td>@Html.DisplayFor(modelItem => item.DateHourLab)</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.LabFile))
                    {
                        <a href="@Url.Content(item.LabFile)" target="_blank">Ver Archivo</a>
                    }
                    else
                    {
                        <text>No Disponible</text>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>